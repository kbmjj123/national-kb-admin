{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "vite.config.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "types/*.d.ts",
    "types/**/*.d.ts",
    "components.d.ts",
    "auto-import.d.ts"
  ],
  "exclude": [
    "**/*.js",
    "commitlint.config.js"
  ]
}